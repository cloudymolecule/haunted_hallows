<%= render partial: 'layouts/errors', locals: { object: @comment } %>

<h1> Edit Your Comment </h1>

<%= form_for @comment do |f| %>

    <%= f.label :entry, "Comment:" %>
    <%= f.text_field :entry %></br></br>
    <%= f.hidden_field :board_id, :value => @comment.board_id %>
    <%= f.hidden_field :guest_id, :value => @comment.guest_id %>

    <%= f.submit "Add Comment" %>
<% end %>
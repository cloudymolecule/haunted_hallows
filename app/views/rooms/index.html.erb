<h1>List of Rooms</h1>

<% @rooms.each do |room| %>
    
    <% if room.do_not_disturb == true && room.bookings.first.guest_id != current_user.id %>
        <p>Room Number <%= room.number %></p>
    <% else %>
        <p>Room Number <%= link_to room.number, room %></p>
    <% end %>

    <p> <%= dnd(room) %></p>
    <p> Note on Room Door: <%= room.note %></br></br></br>

<% end %>
